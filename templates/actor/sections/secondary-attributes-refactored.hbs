<div id='secondary-attributes'>
    <div></div>

    <div class='field-centeredblock1'>


        <div class='label-centered'>Arbitrium </div>
        <div class='field-centered rollable' data-path='attributes.QN.value' data-otf='QN'>{{data.attributes.AR.value}}</div>

        <div class='label-centered'>{{i18n 'GURPS.attributesWILLNAME'}}</div>
        <div class='field-centered rollable' data-path='attributes.WILL.value' data-otf='WILL'>
            {{data.attributes.WILL.value}}
        </div>


    {{#ifCond data.attributes.WILL.value '!=' data.frightcheck}}
        <div class='label-centered'>{{i18n 'GURPS.frightcheck'}}</div>
        <div class='field-centered noedit {{rollable (not isEditing)}}' data-path='frightcheck' data-otf='Fright Check'>
            {{data.frightcheck}}
        </div>
    {{/ifCond}}

    <div class='label-centered'>{{i18n 'GURPS.attributesPERNAME'}}</div>
    <div class='field-centered rollable' data-path='attributes.PER.value' data-otf='PER'>
        {{data.attributes.PER.value}}
    </div>
    {{#ifCond data.attributes.PER.value '!=' data.vision}}
        <div class='label-centered'>{{i18n 'GURPS.vision'}}</div>
        <div class='field-centered noedit {{rollable (not isEditing)}}' data-path='vision'
             data-otf='Vision'>{{data.vision}}</div>
    {{/ifCond}}

    {{#ifCond data.attributes.PER.value '!=' data.hearing}}
        <div class='label-centered'>{{i18n 'GURPS.hearing'}}</div>
        <div class='field-centered noedit {{rollable (not isEditing)}}' data-path='hearing'
             data-otf='Hearing'>{{data.hearing}}</div>
    {{/ifCond}}
    {{#ifCond data.attributes.PER.value '!=' data.tastesmell}}
        <div class='label-centered'>{{i18n 'GURPS.tastesmell'}}</div>
        <div
                class='field-centered noedit {{rollable (not isEditing)}}'
                data-path='tastesmell'
                data-otf='Taste Smell'
        >{{data.tastesmell}}
        </div>
    {{/ifCond}}
    {{#ifCond data.attributes.PER.value '!=' data.touch}}
        <div class='field-centered noedit {{rollable (not isEditing)}}' data-path='touch' data-otf='Touch'>{{data.touch}}</div>
        <div class='label-centered'>{{i18n 'GURPS.touch'}}</div>
    {{/ifCond}}
</div>
</div>