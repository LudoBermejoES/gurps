<div id='aspects-description' class="field-block-description-aspects">
    <div>
        <h1 class='header'>Descripci√≥n</h1>
        {{#if data.descriptions}}
            {{#each data.descriptions}}
                <div class="list">
                    <div style="padding-left: 5px">{{this.notes}}</div>
                </div>
            {{/each}}
        {{/if}}
    </div>
    <div>
        <h1 class='header'>Aspectos</h1>
        <div class="pad">
          {{#if data.aspects}}
              {{#each data.aspects}}
                  {{#if this.notes }}
                  <div>
                      <label>
                          <div class="extra-info" style="margin-bottom: 4px"  data-info="{{this.notes}}">{{this.name}}</div>
                      </label>
                  </div>
                  {{else}}
                   <div style="margin-bottom: 4px; font-size:12px" >{{this.name}}</div>
                  {{/if}}
              {{/each}}
          {{/if}}
        </div>
    </div>
</div>